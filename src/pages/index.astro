---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';
import WelcomeCard from '../components/WelcomeCard/index.astro';
import Projects from '../components/Projects/index.astro';
---

<Layout>
	<Header />
	<main>
		<WelcomeCard />
		<!-- Here goes the "About me" -->
		<div class="section__container">
			<Projects />
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1em;
	}

	.section__container {
		width: 80%;
		max-width: 650px;
		min-width: 300px;
		margin: 0 auto;
	}
</style>
