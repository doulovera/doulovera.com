---
const { title, icon } = Astro.props;

---

<section id={title.split(' ').join('_').toLowerCase()}>
  <h2>
    <i class={icon}></i>
    {title}
  </h2>

  <slot />
</section>

<style>
  section {
    margin-top: 4rem;
  }

  h2 {
    margin-bottom: 2rem;
    font-size: 2.4rem;
    font-weight: 800;
    letter-spacing: .1rem;
  }
</style>
