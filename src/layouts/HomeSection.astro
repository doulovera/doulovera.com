---
const { title, icon } = Astro.props;

---

<section id={title.split(' ').join('_').toLowerCase()}>
  <h2>
    <i class={icon}></i>
    {title}
  </h2>

  <slot />
</section>

<style>
  section {
    margin-top: 8rem;
  }

  h2 {
    display: flex;
    align-items: center;
    gap: .6rem;
    margin-bottom: 2rem;
    font-size: 2.4rem;
    font-weight: 800;
  }
</style>
