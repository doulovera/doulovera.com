---
import Header from "../components/header/header.astro";

const title = "Douglas Lovera - Web Developer";
const description = "I am passionate about programming and improving lives through technology. I like learning new things that can help me to improve my skills and knowledge";
const color = "#5a3fd1";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <link href="/fonts/iconfont.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:ital,wght@0,100..900;1,100..900&family=Inter:wght@100..900&display=swap" rel="stylesheet">

    <link rel="icon" href="/favicon.ico" sizes="image/x-icon" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link
      rel="apple-touch-icon"
      href="data:image/png;base64,"
    />
    <link
      rel="manifest"
      href="data:application/manifest+json;base64,"
    />

    <meta name="theme-color" content={color} />
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="@doulovera" />
  </head>
  <body class="relative">
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --app-min-width: 320px;

    --bg-gradient: linear-gradient(
      90deg,
      rgba(57, 74, 153, 1) 35%,
      rgba(90, 108, 193, 1) 100%
    );

    /* theme */
    --bg-primary: #292929;
    --bg-secondary: #171717;
    --font-primary: #000;
    --font-secondary: #000;
    --bg-brand: #5a3fd1;

    --bg-blur: #171717ee;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>

<style>
  html {
    font-family: -apple-system, BlinkMacSystemFont, "Inter", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    min-width: var(--app-min-width);
    line-height: 1.5;
    transition: background-color 0.2s;
  }
  
</style>
