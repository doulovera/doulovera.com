---
import Portrait from './portrait.astro';

import Button from "../shared/button.astro";
import SocialNetwork from "../shared/social-network.astro";
---

<section>  
  <div class="grid grid-cols-1 sm:grid-cols-[62%,1fr] gap-6 sm:gap-0 mt-6">

    <div class="relative order-2 sm:order-1 flex flex-col justify-around gap-6 sm:gap-0 h-96 text-center sm:text-left">
      <h2 class="py-2 text-4xl uppercase">
        <strong class="bg-blue-100">FullStack Developer</strong>
      </h2>
      <p class="uppercase text-2xl">
        Love creating things and learning about technologies.
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Deleniti, suscipit.
      </p>
      
      <div class="flex justify-center sm:justify-start gap-0 min-[360px]:gap-4 text-xl">
        <div>
          <Button className="px-10 bg-blue-100" anchor href="https://doulovera.com">
            <span class="uppercase font-bold text-lg pr-2">Resume</span>
            <i class="ph:download-simple-bold"></i>
          </Button>
        </div>
        <div class="inline-block h-14 shadow-outline-no-left">
          <SocialNetwork />
        </div>
      </div>
    </div>

    <div class="order-1 sm:order-2 w-4/5 sm:w-full mx-auto sm:mx-0">
      <Portrait />
    </div>

  </div>

</section>
