---
import Name from "./name.astro";
import Portrait from './portrait.astro';

import Button from "../shared/button.astro";
import SocialNetwork from "../shared/social-network.astro";
---

<section>
  <Name />
  
  <div class="grid grid-cols-[60%,1fr] mt-6">
    <div class="relative flex flex-col justify-around h-96">
      <h2 class="py-2 text-left text-4xl uppercase">
        <strong class="bg-blue-100">FullStack Developer</strong>
      </h2>
      <p class="uppercase text-2xl">
        Love creating things and learning about technologies.
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Deleniti, suscipit.
      </p>
      
      <div class="flex justify-start gap-4 text-xl">
        <div>
          <Button className="px-10" anchor href="https://doulovera.com">
            <span class="uppercase font-bold text-lg pr-2">Resume</span>
            <i class="ph:download-simple-bold"></i>
          </Button>
        </div>
        <div class="inline-block h-14 shadow-outline">
          <SocialNetwork />
        </div>
      </div>
    </div>
    <div class="w-full">
      <Portrait />
    </div>
  </div>

</section>
