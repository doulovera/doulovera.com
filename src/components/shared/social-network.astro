---
import { SOCIAL_LINKS } from "../../constants/links";

---

<nav class="flex h-full">
  {
    SOCIAL_LINKS.map(({ icon, name, url }, index) => (
      <a
        href={url}
        class={`flex justify-center items-center aspect-square text-2xl text-black ${!!index && 'outline outline-2'}`}
        aria-label={name}
      >
        <i class={icon}></i>
      </a>
    ))
  }
</nav>