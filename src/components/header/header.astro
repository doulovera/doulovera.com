---
import SocialNetwork from "../shared/social-network.astro";
import Dropdown from "../shared/dropdown.astro";

const navbarItems = [
  'experience',
  'projects',
  'about',
  'contact'
]

---

<header class="fixed z-50 top-0 right-0 left-0 flex justify-between h-14 max-h-[56px] max-w-[768px] w-full mx-auto border-t-0 shadow-outline bg-gray-50">
  <SocialNetwork />

  <nav class="hidden sm:flex flex-1 justify-around">
    {
      navbarItems.map((item) => (
        <a
          href={`#${item}`}
          class="flex justify-center items-center w-auto h-full text-md uppercase font-bold text-black"
        >
          {item}
        </a>
      ))
    }
  </nav>

  <div class="block sm:hidden flex-1"></div>

  <Dropdown
    label="English"
    options={[
      {
        label: 'English',
        value: 'en'
      },
      {
        label: 'EspaÃ±ol',
        value: 'es'
      },
    ]}
  />

  <button class="flex justify-center items-center aspect-square w-14 text-2xl shadow-outline-no-left">
    <i class="ph:sun-dim"></i>
  </button>
</header>
