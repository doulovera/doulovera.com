---
import SocialNetwork from "../shared/social-network.astro";
import Dropdown from "../shared/dropdown.astro";
import { RESUME } from "../../constants/links";

const navbarItems = [
  'experience',
  'projects',
  'about',
  'contact'
]

---

<header class="fixed z-50 top-0 right-0 left-0 flex justify-between h-14 max-h-[56px] max-w-[768px] w-full mx-auto border-t-0 shadow-outline bg-gray-50">
  <SocialNetwork />

  <nav class="hidden sm:flex flex-1 justify-around">
    {
      navbarItems.map((item) => (
        <a
          href={`#${item}`}
          class="flex justify-center items-center w-auto h-full text-md uppercase font-bold text-black hover:underline"
        >
          {item}
        </a>
      ))
    }
  </nav>

  <div class="flex place-content-center sm:hidden flex-1">
    <a href={RESUME.url} class="flex justify-center items-center gap-2 w-full h-full uppercase hover:underline">
      <span class="hidden min-[380px]:inline text-md font-bold">
        {RESUME.name}
      </span>

      <span class="text-2xl min-[380px]:text-xl">
        <i class="ph:file-pdf-bold"></i>
      </span>
    </a>
  </div>

  <Dropdown
    label="English"
    options={[
      {
        label: 'English',
        value: 'en'
      },
      {
        label: 'EspaÃ±ol',
        value: 'es'
      },
    ]}
  />

  <button class="flex justify-center items-center aspect-square w-14 text-2xl shadow-outline-no-left">
    <i class="ph:sun-dim"></i>
  </button>
</header>
